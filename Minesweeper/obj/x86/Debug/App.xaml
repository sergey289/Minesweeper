<Application
    x:Class="Minesweeper.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Minesweeper">


    <Application.Resources>

        <Style x:Key="center" TargetType="FrameworkElement">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <!--<Setter Property="TextBlock.FontSize" Value="20"/>-->
        </Style>

        <Style TargetType="TextBlock" BasedOn="{StaticResource center}">
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource center}">
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="btnStart" TargetType="Button" BasedOn="{StaticResource center}">
            <Setter Property="FontSize" Value="30"/>
        </Style>

    </Application.Resources>


</Application>

